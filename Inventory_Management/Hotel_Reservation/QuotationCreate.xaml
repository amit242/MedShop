            <Label Content="Add VAT Tax:" FontSize="8" Height="20" Margin="224,278,6,0" Name="label32" VerticalAlignment="Top" Grid.Column="1" />
            <RadioButton Height="16" HorizontalAlignment="Left" Margin="241,304,0,0" Name="radioButton2" VerticalAlignment="Top" Grid.Column="1" />
        </Grid>
    </Grid>
</Window>
