            <TextBox FontSize="8" Height="20" HorizontalAlignment="Left" Margin="173,276,0,0" Name="textBoxPaid" VerticalAlignment="Top" Width="46" Grid.Column="1" />
            <Label Content="Total:" FontSize="8" Height="20" HorizontalAlignment="Left" Margin="53,299,0,0" Name="label29" VerticalAlignment="Top" Grid.Column="1" />
            <TextBox FontSize="8" Height="20" HorizontalAlignment="Left" Margin="95,299,0,0" Name="textBoxTotal" VerticalAlignment="Top" Width="38" Grid.Column="1" />
            <Label Content="Owing:" FontSize="8" Height="20" HorizontalAlignment="Left" Margin="142,299,0,0" Name="label30" VerticalAlignment="Top" Grid.Column="1" />
            <TextBox FontSize="8" Height="20" HorizontalAlignment="Left" Margin="173,302,0,0" Name="textBoxOwing" VerticalAlignment="Top" Width="46" Grid.Column="1" />
