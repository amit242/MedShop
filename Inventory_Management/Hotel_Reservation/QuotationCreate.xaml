                        Width="94" FontSize="8"/>
            <Label Content="Address2:" FontSize="8" Height="20" HorizontalAlignment="Left" Margin="6,92,0,0" Name="label9" VerticalAlignment="Top" />
            <TextBox FontSize="8" Height="20" HorizontalAlignment="Left" Margin="75,92,0,0" Name="textBoxInvoiceAddress2" VerticalAlignment="Top" Width="89" />
            <Label Content="City:" FontSize="8" Height="20" HorizontalAlignment="Left" Margin="170,92,0,0" Name="label10" VerticalAlignment="Top" />
            <TextBox FontSize="8" Height="20" HorizontalAlignment="Left" Margin="225,92,0,0" Name="textBoxInvoiceCity" VerticalAlignment="Top" Width="78" />
            <Button Content="Reset Customer" FontSize="8" Height="20" HorizontalAlignment="Left" Margin="14,92,0,0" Name="buttonResetCustomer" VerticalAlignment="Top" Width="66" Grid.Column="1" />
            <Label Content="Quote Date:" FontSize="8" Height="20" HorizontalAlignment="Left" Margin="95,92,0,0" Name="label11" VerticalAlignment="Top" Width="61" Grid.Column="1" />
