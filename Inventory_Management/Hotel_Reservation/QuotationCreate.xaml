            <TextBox FontSize="8" Height="20" HorizontalAlignment="Left" Margin="225,144,0,0" Name="textBoxInvoiceFax" VerticalAlignment="Top" Width="78" />
            <Label Content="Shipped Date:" FontSize="8" Grid.Column="1" Height="20" HorizontalAlignment="Left" Margin="95,144,0,0" Name="label17" VerticalAlignment="Top" Width="61" />
            <DatePicker FontSize="8" Height="20" HorizontalAlignment="Left" Margin="162,144,0,0" Name="datePickerShippedDate" VerticalAlignment="Top" Width="94" Grid.Column="1" />
            <Label Content="Phone:" FontSize="8" Height="20" HorizontalAlignment="Left" Margin="6,170,0,0" Name="label18" VerticalAlignment="Top" />
            <TextBox FontSize="8" Height="20" HorizontalAlignment="Left" Margin="75,170,0,0" Name="textBoxInvoicePhone" VerticalAlignment="Top" Width="89" />
            <Label Content="E-Mail:" FontSize="8" Height="20" HorizontalAlignment="Left" Margin="170,170,0,0" Name="label19" VerticalAlignment="Top" />
            <TextBox FontSize="8" Height="20" HorizontalAlignment="Left" Margin="225,170,0,0" Name="textBoxInvoiceEmail" VerticalAlignment="Top" Width="78" />
