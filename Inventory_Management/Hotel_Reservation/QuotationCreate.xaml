            <Button Content="Cancle Quote" FontSize="8" Height="20" HorizontalAlignment="Right" Margin="0,334,257,0" Name="buttonCancleInvoice" VerticalAlignment="Top" Width="66" Grid.ColumnSpan="2" />
            <Button Content="Close" FontSize="8" Height="20" HorizontalAlignment="Left" Margin="67,334,0,0" Name="buttonClose" VerticalAlignment="Top" Width="66" Grid.Column="1" />
            <Label Content="Mobile:" FontSize="8" Height="20" HorizontalAlignment="Left" Margin="14,143,0,0" Name="label31" VerticalAlignment="Top" Grid.Column="1" />
